FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     simpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         10000;

deltaT          1;

writeControl    timeStep;

writeInterval   10000;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
	
        forceCoeffs1
        {
            type            forceCoeffs;
        libs ( "libforces.so" );
        writeControl   timeStep;
        writeInterval  1;
        patches         (airfoil);
        rho             rhoInf;
        log             true;
        rhoInf          1;
        liftDir         (  0  0   1); // Lift is the component of this force that is perpendicular to the oncoming flow direction
        dragDir         (1  0  0);
        CofR            (0.25  0 0);
        pitchAxis       (0 1 0);
        magUInf         1;
        lRef            1;
        Aref            1;
        }	
		residuals
	{	
	type residuals;
	functionObjectLibs ("libutilityFunctionObjects.so");
	enabled true;
	writeControl timeStep;
	writeInterval 1;
	fields
	(
		p
		U
		k
		omega
	);
	}
	yPlus1
	{
	type yPlus;
	libs ( "libfieldFunctionObjects.so" );
        writeControl   timeStep;
        writeInterval  500;
	}
};


// ************************************************************************* //
