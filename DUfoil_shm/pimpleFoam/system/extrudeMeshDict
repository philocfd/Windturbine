FoamFile
{
version     2.0;
    format      ascii;
    class       dictionary;
    object      extrudeMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

constructFrom patch;

sourceCase ".";
sourcePatches (backwall);
exposedPatchName frontwall;

flipNormals false;

extrudeModel        linearNormal;

nLayers             1;

linearNormalCoeffs
{
    thickness       1;
}

// Do front and back need to be merged? Usually only makes sense for 360
// degree wedges.
mergeFaces false;   //true;

// Merge small edges. Fraction of bounding box.
//mergeTol 0;

